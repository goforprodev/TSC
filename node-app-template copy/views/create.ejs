<%- include('partials/top.ejs')%>
<main class="w-full h-screen">
  <div id="logo">
    <img src="img/logo.png" alt="logo" class="w-44 mx-auto">
  </div>

  <div
    id="container"
    class="p-5 w-6/12 w-1/3 mx-auto bg-white rounded-lg shadow-xl"
  >
    <div class="flex my-2">
      <button class="tab bg-gray-200 hover:bg-gray-300 py-2 px-4 mr-2 rounded-t-md focus:outline-none active:bg-gray-400" id="tab1">Create Meeting</button>
      <button class="tab bg-gray-200 hover:bg-gray-300 py-2 px-4 rounded-t-md focus:outline-none active:bg-gray-400" id="tab2">Inference</button>
    </div>
    <div class="tab-content" id="content1">
    <form action="" id="create__form" class="mb-5" >
      <div class="-mx-3 flex flex-wrap flex-col">
        <div class="w-full px-3">
          <div class="mb-5">
            <label
              for="fName"
              class="mb-3 block text-base font-medium text-[#07074D]"
            >
              Title *
            </label>
            <input
              required
              type="text"
              name="fName"
              id="title__field"
              placeholder="First Name"
              class="w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#cf9c2e] focus:shadow-md"
            />
          </div>
        </div>
        <div class="w-full px-3">
          <div class="mb-5">
            <label
              for="lName"
              class="mb-3 block text-base font-medium text-[#07074D]"
            >
              Fields *
            </label>
            <div class="flex gap-5">
              <input
                type="text"
                name="lName"
                id="field"
                placeholder="Enter Form Fields"
                class="w-[90%] rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#cf9c2e] focus:shadow-md"
              />

              <button
                id="add-field__btn"
                type="button"
                class="border-2 border-[#cf9c2e] flex-1 rounded-md hover:bg-[#cf9c2e]"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  class="w-6 h-6 mx-auto"
                >
                  <path
                    fill-rule="evenodd"
                    d="M12 3.75a.75.75 0 01.75.75v6.75h6.75a.75.75 0 010 1.5h-6.75v6.75a.75.75 0 01-1.5 0v-6.75H4.5a.75.75 0 010-1.5h6.75V4.5a.75.75 0 01.75-.75z"
                    clip-rule="evenodd"
                  />
                </svg>
              </button>
            </div>
          </div>
        </div>
        <div class="w-full px-3">
          <div
            id="field__box"
            class="border-2 border-[#cf9c2e] w-full h-[300px] rounded-md my-5 p-4 flex flex-wrap items-start gap-2"
          >
            <!-- <div
              id="el"
              class="rounded-lg flex justify-around items-center bg-[#808080] p-4 w-44 text-white font-semibold"
            >
              <div class="inline truncate">Some text</div>
              <button id="cancel__btn">x</button>
            </div> -->
          </div>
        </div>
      </div>
      <button
        type="submit"
        id="submit__btn"
        class="rounded-md bg-[#cf9c2e] h-14 capitalize text-white font-semibold w-full text-xl"
        disabled
      >
        Submit
      </button>
    </form>
      <div id="copy-clipboard__container"></div>
    </div>
    <div class="tab-content hidden" id="content2">
      <input
              required
              type="text"
              name="fName"
              id="meeting-link__field"
              placeholder="Paste meeting Link here"
              class="my-4 w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#cf9c2e] focus:shadow-md"
      />
      <button
              type="submit"
              id="submit__btn"
              class="rounded-md bg-[#cf9c2e] h-14 capitalize text-white font-semibold w-full text-xl"
      >
        Export to csv
      </button>
    </div>
  </div>
</main>
<script src="js/create.js"></script>
<%- include('partials/bottom.ejs')%>
